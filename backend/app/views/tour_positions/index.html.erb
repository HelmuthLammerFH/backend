<p id="notice"><%= notice %></p>

<h1>Tour Positions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Createdfrom</th>
      <th>Changedfrom</th>
      <th>Syncedfrom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tour_positions.each do |tour_position| %>
      <tr>
        <td><%= tour_position.name %></td>
        <td><%= tour_position.position %></td>
        <td><%= tour_position.createdFrom %></td>
        <td><%= tour_position.changedFrom %></td>
        <td><%= tour_position.syncedFrom %></td>
        <td><%= link_to 'Show', tour_position %></td>
        <td><%= link_to 'Edit', edit_tour_position_path(tour_position) %></td>
        <td><%= link_to 'Destroy', tour_position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

