    <div class="row">
      <div class="col-xs-12 col-md-6">
        <p>
          <strong>Tourguide:</strong>
        </p>
      </div>
      <div class="col-xs-12 col-md-6">
        <%= @tour.Tourguide.user.lastname %>
        <%= link_to 'Anzeigen', @tour.Tourguide %>
      </div>
    </div>
  </div>
</div>


<h1>Teilnehmer</h1>
<table class="table table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Geburtsdatum</th>
    <th>Teilgenommen</th>
    <th>Bewertung</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= user.lastname %></td>
        <td><%= user.birthdate.strftime("%d/%m/%Y") %></td>
        <td><%= @customers_in_tours[index].participated ? 'Ja' : 'Nein' %></td>
        <td>
          <% for i in 1..@customers_in_tours[index].starRating  do %>
              <img height="15" src="/assets/star.ico" />
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>


