<div class="row">
  <div class="col-xs-12">
    <h1>Dashboard</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-md-6">
    <div class="row">
      <!-- Einnahmen Infos  -->
      <div class="col-xs-12">
        <h2>Umsatz</h2>
      </div>
      <div class="col-xs-12">
        <%= line_chart @sales_chart %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-6">
    <div class="row">
      <!-- tour Guide Infos -->
      <div class="col-xs-12">
        <h2>Gef&uuml;hrte Touren pro Guide</h2>
      </div>
      <div class="col-xs-12">
        <%= column_chart @tourguidesChartData %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-md-6">
    <div class="row">
      <div class="col-xs-12">
        <h2>Umsatz pro Tour </h2>
      </div>
      <div class="col-xs-12">
        <%= column_chart @tourssum %>
      </div>
    </div>
  </div>




  <div class="col-xs-12 col-md-6">
    <div class="row">
      <div class="col-xs-12">
        <h2>Die Beliebtesten Touren</h2>
      </div>
      <div class="col-xs-12">
        <table class="table table-bordered table-hover">
          <thead>
          <tr>
            <th>Tour</th>
            <th>Teilnehmer</th>
            <th>Bewertung</th>
            <th>Aktion</th>
          </tr>
          </thead>
          <tbody>
          <% @mostBookedTours.each do |tour, customers, stars| %>
              <tr>
                <td><%= tour.name %></td>
                <td><%= customers %></td>
                <td><%= stars %></td>
                <td><%= link_to 'Anzeigen', tour %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
