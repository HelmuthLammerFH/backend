  </div>

  <div class="col-xs-4">
    <div class="row">
      <div class="col-xs-12">
        <h3>Die Beliebtesten Touren</h3>
      </div>
      <div class="col-xs-12">
        <table class="table table-bordered">
          <thead>
          <tr>
            <th>Tour</th>
            <th>Buchungen</th>
            <th>Aktion</th>
          </tr>
          </thead>
          <tbody>
          <% @mostBookedTours.each do |tour, customers| %>
              <tr>
                <td><%= tour.name %></td>
                <td><%= customers %></td>

